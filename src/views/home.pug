            form#sign-in    
                input(type="text", placeholder="ID")
                button(type="submit") Confirm
            button#sign-up(type="submit") Sign Up
        main
            img(src="/img/todotestimg.jpg", alt="이미지 들어갈 곳")
        include partials/script    
    include partials/footer
